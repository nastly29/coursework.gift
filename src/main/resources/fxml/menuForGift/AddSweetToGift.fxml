      fx:controller="controllers.menuForGift.AddSweetToGift"
      spacing="10"
      alignment="CENTER">

    <Label fx:id="infoLabel" wrapText="true" />

    <Label wrapText="true"
           text="Наповни свій подарунок солодощами!"
           styleClass="title-label"/>

    <ScrollPane fitToWidth="true" fx:id="scrollPane">
